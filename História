        // Variáveis do jogo
        let currentQuestionIndex = 0;
        let score = 0;
        let selectedOption = null;
        let questionsAnswered = 0;
        const totalQuestions = 10; // Número de perguntas por jogo
        let shuffledQuestions = [];
        
        // Elementos do DOM
        const questionElement = document.getElementById('question');
        const optionsElement = document.getElementById('options');
        const scoreElement = document.getElementById('score');
        const currentQuestionElement = document.getElementById('current-question');
        const totalQuestionsElement = document.getElementById('total-questions');
        const submitButton = document.getElementById('submit-btn');
        const nextButton = document.getElementById('next-btn');
        const resultContainer = document.getElementById('result-container');
        const finalScoreElement = document.getElementById('final-score');
        const maxScoreElement = document.getElementById('max-score');
        const feedbackElement = document.getElementById('feedback');
        const restartButton = document.getElementById('restart-btn');
        const progressBar = document.getElementById('progress-bar');
        const explanationElement = document.getElementById('explanation');
        const quizContainer = document.querySelector('.quiz-container');
        
        // Inicializar o jogo
        function initGame() {
            score = 0;
            questionsAnswered = 0;
            selectedOption = null;
            
            // Embaralhar as perguntas e pegar as primeiras 'totalQuestions'
            shuffledQuestions = [...questions].sort(() => Math.random() - 0.5).slice(0, totalQuestions);
            
            // Atualizar a interface
            scoreElement.textContent = score;
            totalQuestionsElement.textContent = totalQuestions;
            
            // Esconder o resultado e mostrar o quiz
            resultContainer.style.display = 'none';
            quizContainer.style.display = 'block';
            
            // Carregar a primeira pergunta
            loadQuestion();
        }
        
        // Carregar pergunta
        function loadQuestion() {
            resetState();
            currentQuestionElement.textContent = questionsAnswered + 1;
            progressBar.style.width = `${(questionsAnswered / totalQuestions) * 100}%`;
            
            const currentQuestion = shuffledQuestions[questionsAnswered];
            const difficultyClass = currentQuestion.difficulty;
            
            questionElement.innerHTML = `${currentQuestion.question} <span class="difficulty ${difficultyClass}">${currentQuestion.difficulty}</span>`;
            
            currentQuestion.options.forEach((option, index) => {
                const button = document.createElement('div');
                button.classList.add('option');
                button.textContent = option;
                button.dataset.index = index;
                button.addEventListener('click', selectOption);
                optionsElement.appendChild(button);
            });
            
            submitButton.disabled = true;
            nextButton.style.display = 'none';
            explanationElement.style.display = 'none';
        }
        
        // Resetar estado das opções
        function resetState() {
            while (optionsElement.firstChild) {
                optionsElement.removeChild(optionsElement.firstChild);
            }
            
            selectedOption = null;
            submitButton.disabled = true;
        }
        
        // Selecionar opção
        function selectOption(e) {
            const selectedButton = e.target;
            
            // Remover seleção anterior
            const options = document.querySelectorAll('.option');
            options.forEach(option => {
                option.classList.remove('selected');
            });
            
            // Selecionar nova opção
            selectedButton.classList.add('selected');
            selectedOption = parseInt(selectedButton.dataset.index);
            submitButton.disabled = false;
        }
        
        // Verificar resposta
        function checkAnswer() {
            const currentQuestion = shuffledQuestions[questionsAnswered];
            
            // Desabilitar todas as opções
            const options = document.querySelectorAll('.option');
            options.forEach(option => {
                option.style.pointerEvents = 'none';
            });
            
            // Mostrar qual era a correta e qual foi selecionada
            options.forEach((option, index) => {
                if (index === currentQuestion.answer) {
                    option.classList.add('correct');
                } else if (index === selectedOption && selectedOption !== currentQuestion.answer) {
                    option.classList.add('wrong');
                }
            });
            
            // Atualizar pontuação
            if (selectedOption === currentQuestion.answer) {
                score++;
                scoreElement.textContent = score;
            }
            
            // Mostrar explicação
            explanationElement.textContent = currentQuestion.explanation;
            explanationElement.style.display = 'block';
            
            // Mostrar botão de próxima pergunta
            submitButton.style.display = 'none';
            nextButton.style.display = 'inline-block';
        }
        
        // Próxima pergunta
        function nextQuestion() {
            questionsAnswered++;
            
            if (questionsAnswered < totalQuestions) {
                loadQuestion();
                submitButton.style.display = 'inline-block';
            } else {
                showResult();
            }
        }
        
        // Mostrar resultado final
        function showResult() {
            quizContainer.style.display = 'none';
            resultContainer.style.display = 'block';
            progressBar.style.width = '100%';
            
            finalScoreElement.textContent = score;
            maxScoreElement.textContent = totalQuestions;
            
            // Dar feedback baseado na pontuação
            const percentage = (score / totalQuestions) * 100;
            
            if (percentage >= 80) {
                feedbackElement.textContent = "Excelente! Você demonstrou um conhecimento excepcional sobre a Primeira Guerra Mundial.";
            } else if (percentage >= 60) {
                feedbackElement.textContent = "Bom trabalho! Você tem um bom entendimento sobre a Primeira Guerra Mundial, mas ainda pode aprender mais.";
            } else if (percentage >= 40) {
                feedbackElement.textContent = "Não foi mal! Você conhece alguns aspectos da Primeira Guerra Mundial, mas há muito mais para explorar.";
            } else {
                feedbackElement.textContent = "Continue estudando! A Primeira Guerra Mundial é um tema complexo e fascinante que vale a pena conhecer melhor.";
            }
        }
        
        // Event listeners
        submitButton.addEventListener('click', checkAnswer);
        nextButton.addEventListener('click', nextQuestion);
        restartButton.addEventListener('click', initGame);
        
        // Iniciar o jogo quando a página carregar
        window.addEventListener('load', initGame);
    </script>
</body>
</html>
